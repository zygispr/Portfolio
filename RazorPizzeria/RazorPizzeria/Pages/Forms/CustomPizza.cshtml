@page
@model RazorPizzeria.Pages.Forms.CustomPizzaModel
@{
    ViewData["Title"] = "CustomPizza";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container text-center">
    <h1 class="display-4 mainText">Create your own pizza</h1>
    <form method="post" class="col-lg-4 col-md-6 col-sm-6 mx-auto mt-4 mb-4 px-5 pt-5 pb-5 rounded-3 bg-light">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Custom pizza name" class="text-center form-control"/>
        <br>
        <div class="text-start mx-4">
            <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="Tomato sauce" class="mx-1"/>
            <label>Tomato sauce</label>
        </div>
        <div class="text-start mx-4">
            <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese" class="mx-1"/>
            <label>Cheese</label>
        </div>
        <div class="text-start mx-4">
            <input type="checkbox" asp-for="Pizza.Ham" placeholder="Ham" class="m-1"/>
            <label>Ham</label>
        </div>
        <div class="text-start mx-4">
            <input type="checkbox" asp-for="Pizza.Beef" placeholder="Beef" class="m-1"/>
            <label>Beef</label>
        </div>
        <div class="text-start mx-4">
            <input type="checkbox" asp-for="Pizza.Pepperoni" placeholder="Pepperoni" class="m-1"/>
            <label>Pepperoni</label>
        </div>
        <div class="text-start mx-4">
            <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom" class="m-1"/>
            <label>Mushroom</label>
        </div>
        <div class="text-start mx-4">
            <input type="checkbox" asp-for="Pizza.Tuna" placeholder="Tuna" class="m-1"/>
            <label>Tuna</label>
        </div>
        <div class="text-start mx-4">
            <input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Pineapple" class="m-1"/>
            <label>Pineapple</label>
        </div>
        <button class="btn btn-primary mt-4" type="submit">Order</button>
    </form>
</div>