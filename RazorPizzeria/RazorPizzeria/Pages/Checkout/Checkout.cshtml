    }
    
    <div class="align-content-center">
        <div class="col-lg-4 col-md-6 col-sm-6 mx-auto mb-5">
            <img src="@imagePath" class="w-100 rounded-3" asp-append-version="true"/>
            <p>Your order for the @Model.PizzaName pizza is ready</p>
