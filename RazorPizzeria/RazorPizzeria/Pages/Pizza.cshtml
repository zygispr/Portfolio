@page
@model RazorPizzeria.Pages.PizzaModel
@{
    ViewData["Title"] = "Pizza";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="text-center">

    <div class="mainText">
        <h1 class="display-4 text-black">Our great selection of pizzas!</h1>
        <h4>Choose one, or try our Pizza Builder. Then order and voila!</h4>
        <h4>No need to give any of your details!</h4>
        <h4>We already know everything</h4>
        <p class="smallText">
            <i>Only one pizza per order</i>
        </p>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 mt-5 mb-5">
                <div class="w-100 row m-0 align-items-center rounded-3" style="background: gray;">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8">
                        <div class="text-white">
                            <h3 style="text-align: left;">Create your own pizza</h3>
                            <p style="text-align: left;">Make your own pizza with our Pizza Builder</p>
                            <a class="btn btn-primary" style="float: left;" asp-area="" asp-page="Forms/CustomPizza">Try now</a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var pizza in Model.FakePizzaDb)
            {
                var imagePath = $"~/images/Pizzas/{@pizza.ImageTitle}.png";
                <div class="col-4 mb-5">
                    <a class="pizza-img" asp-area="" asp-page="Checkout/Checkout"
                       asp-route-ImageTitle="@pizza.ImageTitle"
                       asp-route-PizzaName="@pizza.PizzaName"
                       asp-route-PizzaPrice="@pizza.FinalPrice">
                        <img src="@imagePath" class="w-100 rounded-3" asp-append-version="true"/>
                    </a>
                    <br>
                </div>
            }
        </div>
    </div>

</div>